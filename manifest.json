{
    "manifest_version": 2,
    "name": "YandexMusicControl",
    "version": "1.0",
    "description": "Yandex Music Controls and hotkeys.",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "applications": {
        "gecko": {
            "id": "ymc@dzhard.github.org",
            "strict_min_version": "45.0"
        }
    },
    "permissions": [
        "*://music.yandex.ru/*",
        "*://music.yandex.by/*",
        "activeTab",
        "tabs",
        "notifications"
    ],
    "browser_action": {
        "default_icon": "icons/icon-48.png",
        "default_title": "Yandex Music Control",
        "default_popup": "popup/controls.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://music.yandex.ru/*"
            ],
            "js": [
                "injector.js"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "yamusic@dzhard.github.com",
            "strict_min_version": "42.0"
        }
    }
}